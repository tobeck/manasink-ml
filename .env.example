# Manasink ML Environment Variables
# Copy this file to .env and customize as needed

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL settings
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=manasink
DB_HOST=postgres
DB_PORT=5432

# Or use a full database URL (takes precedence over individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/manasink

# =============================================================================
# Redis Configuration (optional)
# =============================================================================

REDIS_URL=redis://redis:6379

# =============================================================================
# API Configuration
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# =============================================================================
# Traefik / Domain Configuration (optional)
# =============================================================================

# Your domain for Traefik routing
DOMAIN=example.com
